#!/bin/bash
echo "Compilando executável para [QuickSort - QSort]"
cd ..
make

echo ":: Listas randômicas"
./a.out 0 100 5
./a.out 0 1000 5
./a.out 0 10000 5
./a.out 0 100000 5
./a.out 0 1000000 5
./a.out 0 10000000 5

echo ":: Listas crescentes"
./a.out 1 100 5
./a.out 1 1000 5
./a.out 1 10000 5
./a.out 1 100000 5
./a.out 1 1000000 5
./a.out 1 10000000 5

echo ":: Listas decrescentes"
./a.out 2 100 5
./a.out 2 1000 5
./a.out 2 10000 5
./a.out 2 100000 5
./a.out 2 1000000 5
./a.out 2 10000000 5